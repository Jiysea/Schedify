@model ResourceViewModel

@{
    ViewData["Title"] = "Resources";
}

<partial name="~/Views/Organizer/Partials/_SidebarPartial.cshtml" />

<div x-data="{ viewResourceModal: false, createResourceModal: false }" class="duration-500 ease-in-out min-h-screen bg-[#F9FBFA] ms-[80px] lg:ms-[250px]">

    @* Main Header (Search & Avatar) *@
