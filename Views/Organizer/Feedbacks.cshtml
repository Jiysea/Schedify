@model EventFeedbacksViewModel

@{
    ViewData["Title"] = "Feedbacks";
}

<partial name="~/Views/Organizer/Partials/_SidebarPartial.cshtml" />

<div x-data="{viewEventModal: false, createEventModal: false}" class="duration-500 ease-in-out min-h-screen bg-[#F9FBFA] ms-[80px] lg:ms-[250px]">
    @* Main Header (Search & Avatar) *@
    <partial name="~/Views/Organizer/Partials/_TopbarPartial.cshtml" model="Model.AvatarFileName" />

    <header class="flex flex-col items-center w-full px-4 py-2 border-b-2 border-zinc-100">

        @* Sub Header (My Events, Date Range, Filter, & Create New Event Button) *@
        <div class="flex items-center justify-between w-full h-[8vh] gap-3">
            <div class="flex items-center gap-3">
                <span class="flex items-center justify-center bg-pumpkin-500 text-pumpkin-50 p-1 size-8 rounded-lg">
                    <svg class="" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                    viewBox="0 0 256 256">
                    <path
                        d="M88,104a8,8,0,0,1,8-8h64a8,8,0,0,1,0,16H96A8,8,0,0,1,88,104Zm8,40h64a8,8,0,0,0,0-16H96a8,8,0,0,0,0,16ZM232,56V184a16,16,0,0,1-16,16H155.57l-13.68,23.94a16,16,0,0,1-27.78,0L100.43,200H40a16,16,0,0,1-16-16V56A16,16,0,0,1,40,40H216A16,16,0,0,1,232,56Zm-16,0H40V184h65.07a8,8,0,0,1,7,4l16,28,16-28a8,8,0,0,1,7-4H216Z">
                    </path>
                </svg>
                </span>
                <h2 class="font-semibold text-2xl text-coffee-900">Feedbacks</h2>
            </div>

            @* The Events selection dropdown and Add Resource Button *@
            <div id="feedback-events-dropdown" class="flex items-center justify-end gap-3">
                @await Html.PartialAsync("~/Views/Organizer/Partials/_FeedbackEventsDropdown.cshtml", Model)
            </div>
        </div>

    </header>

    <main class="h-[80vh]">

        <div id="feedbacks-list"
            class="space-y-3 p-4 overflow-y-auto h-full scrollbar-thin scrollbar-track-transparent scrollbar-thumb-coffee-700">
            @await Html.PartialAsync("~/Views/Organizer/Partials/_FeedbackListPartial.cshtml", Model)
        </div>

        @* Create Resource Modal *@
        @* @await Html.PartialAsync("~/Views/Organizer/Partials/CreateResourceModal.cshtml", Model.CUResourceViewModel) *@

        @* View Resource Modal *@
        @* @await Html.PartialAsync("~/Views/Organizer/Partials/ViewResourceModal.cshtml", Model.ViewResourceViewModel) *@

    </main>

</div>