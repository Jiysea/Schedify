    <header class="flex flex-col items-center w-full px-4 py-2 border-b-2 border-zinc-100">

        @* Sub Header (Resources, Search, Browse, By Event) *@
        <div class="flex flex-col items-center justify-center w-full h-[8vh] gap-1 ">

            <div class="flex items-center justify-between w-full gap-3">
                <div class="flex items-center gap-3">
                    <span class="flex items-center justify-center bg-pumpkin-500 text-pumpkin-50 p-1 size-8 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                            viewBox="0 0 256 256">
                            <path
                                d="M223.68,66.15,135.68,18a15.88,15.88,0,0,0-15.36,0l-88,48.17a16,16,0,0,0-8.32,14v95.64a16,16,0,0,0,8.32,14l88,48.17a15.88,15.88,0,0,0,15.36,0l88-48.17a16,16,0,0,0,8.32-14V80.18A16,16,0,0,0,223.68,66.15ZM128,32l80.34,44-29.77,16.3-80.35-44ZM128,120,47.66,76l33.9-18.56,80.34,44ZM40,90l80,43.78v85.79L40,175.82Zm176,85.78h0l-80,43.79V133.82l32-17.51V152a8,8,0,0,0,16,0V107.55L216,90v85.77Z">
                            </path>
                        </svg>
                    </span>
                    <h2 class="font-semibold text-2xl text-coffee-900">Resources</h2>
                </div>

                @* Search Bar *@
                @* <div class="flex items-center gap-3">
                    <span class="relative">
                        <input type="text" autocomplete="off"
                            class="peer duration-200 ease-in-out appearance-none w-56 text-sm outline-none ps-8 pe-3 py-1 rounded-md border-2 focus:ring-0 bg-white border-zinc-300 focus:border-coffee-500 text-zinc-500 focus:text-coffee-500 selection:text-coffee-50 selection:bg-coffee-700 placeholder-zinc-500"
                            id="search-bar" placeholder="Search">
                        <svg class="absolute top-1/2 -translate-y-1/2 start-2 size-5 pointer-events-none peer-placeholder-shown:text-zinc-500 peer-focus:text-coffee-500"
                            xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                            viewBox="0 0 256 256">
                            <path
                                d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z">
                            </path>
                        </svg>
                    </span>
                </div> *@

                @* The Events selection dropdown and Add Resource Button *@
                <div id="events-dropdown" class="flex items-center justify-end gap-3">
                    @await Html.PartialAsync("~/Views/Organizer/Partials/_EventsDropdown.cshtml", Model)
                </div>
            </div>
        </div>
    </header>

    <main class="h-[80vh]">

        <div id="resources-list"
            class="space-y-3 p-4 overflow-y-auto h-full scrollbar-thin scrollbar-track-transparent scrollbar-thumb-coffee-700">
            @await Html.PartialAsync("~/Views/Organizer/Partials/_ResourceListPartial.cshtml", Model)
        </div>

        @* Create Resource Modal *@
        @await Html.PartialAsync("~/Views/Organizer/Partials/CreateResourceModal.cshtml", Model.CUResourceViewModel)

        @* View Resource Modal *@
        @await Html.PartialAsync("~/Views/Organizer/Partials/ViewResourceModal.cshtml", Model.ViewResourceViewModel)

    </main>
</div>