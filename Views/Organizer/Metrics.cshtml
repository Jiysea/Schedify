@model MetricsViewModel

@{
    ViewData["Title"] = "Metrics";
}

<partial name="~/Views/Organizer/Partials/_SidebarPartial.cshtml" />

<div class="duration-500 ease-in-out min-h-screen bg-[#F9FBFA] ms-[80px] lg:ms-[250px]">
    
    @* Main Header (Search & Avatar) *@
    <partial name="~/Views/Organizer/Partials/_TopbarPartial.cshtml" model="Model.AvatarFileName" />

    <header class="flex flex-col items-center w-full px-4 py-2 border-b-2 border-zinc-100">

        @* Sub Header (My Events, Date Range, Filter, & Create New Event Button) *@
        <div class="flex items-center justify-between w-full h-[8vh] gap-3">
            <div class="flex items-center gap-3">
                <span class="flex items-center justify-center bg-pumpkin-500 text-pumpkin-50 p-1 size-8 rounded-lg">
                    <svg class="" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                        viewBox="0 0 256 256">
                        <path
                            d="M224,200h-8V40a8,8,0,0,0-8-8H152a8,8,0,0,0-8,8V80H96a8,8,0,0,0-8,8v40H48a8,8,0,0,0-8,8v64H32a8,8,0,0,0,0,16H224a8,8,0,0,0,0-16ZM160,48h40V200H160ZM104,96h40V200H104ZM56,144H88v56H56Z">
                        </path>
                    </svg>
                </span>
                <h2 class="font-semibold text-2xl text-coffee-900">Metrics</h2>
            </div>

            @* The Events selection dropdown and Add Resource Button *@
            @* <div id="feedback-events-dropdown" class="flex items-center justify-end gap-3">
                @await Html.PartialAsync("~/Views/Organizer/Partials/_FeedbackEventsDropdown.cshtml", Model)
            </div> *@
        </div>

    </header>

    <main class="">
        <div id="global-metrics" class="">
            @await Html.PartialAsync("~/Views/Organizer/Partials/_OverallMetricsPartial.cshtml", Model)
        </div>
    </main>

</div>