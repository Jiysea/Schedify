@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary

@foreach (var entry in Model)
{
    <div id="edit-validation-@entry.Key" hx-swap-oob="true"
        class="absolute start-0 top-full text-xs font-normal text-red-500 ">
        @if (entry.Value.Errors.Count > 0) // Correct way to check for errors
        {
            @entry.Value.Errors[0].ErrorMessage
        }
        else if (entry.Value.Errors.Count == 0)
        {
            @* Empty-Lonely_Sadness *@
        }
    </div>
}