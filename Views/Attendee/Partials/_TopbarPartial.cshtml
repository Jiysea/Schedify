@{
    var currentUrl = Context.Request.Path;
}

<div class="grid grid-cols-3 w-full text-center h-[7.5vh] px-4 bg-white text-zinc-500 border-b-2 border-zinc-100">

    @* Col 1 *@
    <span class="flex items-center justify-start gap-2">

        @* Logo Here *@
        <img src="~/images/logo_landscape.png" class="h-8" alt="Schedify Logo">
    </span>

    <div class="flex items-center justify-center gap-5">
        <a href="/attendee/bookings" class="duration-200 ease-in-out text-sm font-medium px-3 py-1 rounded-md @(currentUrl == "/attendee/bookings" ? "bg-coffee-600 hover:bg-coffee-700 active:bg-coffee-900 text-coffee-50" : "text-zinc-500 hover:bg-zinc-50")">Bookings</a>
        <a href="/attendee/events" class="duration-200 ease-in-out text-sm font-medium px-3 py-1 rounded-md @(currentUrl == "/attendee/events" ? "bg-coffee-600 hover:bg-coffee-700 active:bg-coffee-900 text-coffee-50" : "text-zinc-500 hover:bg-zinc-50")">Events</a>
    </div>

    @* Col 3 *@
    <div x-data="{open: false}" class="flex items-center justify-end gap-2">

        <span class="relative flex items-center">
            <button x-on:click="open = !open;" type="menu" class="rounded-full text-center">
                @* <img class="size-7 object-cover rounded-full pointer-events-none" src="~/images/avatar.jpg"
                    alt="User's Avatar"> *@

                    <svg class="size-5 pointer-events-none rounded-full text-coffee-700" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                    width="400" height="400" viewBox="0, 0, 400,400">
                    <g>
                        <path
