@model ResourceType

@if (Model == ResourceType.Venue)
{
    <option selected value="PerHour">Per Hour</option>
    <option value="PerDay">Per Day</option>
    <option value="FixedRate">Fixed Rate</option>
}
else if (Model == ResourceType.Equipment)
{
    <option selected value="PerUnit">Per Unit</option>
    <option value="InBulk">In Bulk</option>
}
else if (Model == ResourceType.Furniture)
{
    <option selected value="PerUnit">Per Unit</option>
    <option value="InBulk">In Bulk</option>
}
else if (Model == ResourceType.Catering)
{
    <option selected value="PerServing">Per Serving</option>
    <option value="InBulk">In Bulk</option>
}
else if (Model == ResourceType.Personnel)
{
    <option selected value="PerHour">Per Hour</option>
    <option value="PerDay">Per Day</option>
    <option value="PerHead">Per Head</option>
    <option value="FixedRate">Fixed Rate</option>
}